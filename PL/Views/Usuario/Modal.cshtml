<div class="modal" tabindex="-1" role="dialog" id="modalValidacion">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #2eadf5">
                <h3 class="modal-title text-center" style="color: #fff"><strong>@ViewBag.Title</strong></h3>
            </div>
            <div class="modal-body">
                <h4 class="text-center">@ViewBag.Message</h4>
            </div>
            <div class="modal-footer">
                @Html.ActionLink("Volver", "Conversaciones", "Usuario", htmlAttributes: new { @class = "btn", @style = "background-color: #0fe12c" })
            </div>
        </div>
    </div>
</div>

<script>
    $('#modalValidacion').modal();
</script>